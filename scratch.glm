-- an example of a SQL DSL in gluumy that probably could exist
-- selects the highest priced item's id and its modification time as a native
-- dt object
PricedItemRow = SQLRow <=> {
	id(UUIDv4)
	price(Decimal)
	updated_at(DateTime)
}

select(Result (List PricedItemRow)) {
	from "items" {
		(col "id")
		(max (col "price"))
		(col "updated_at")
	}
	where (eq (col "deleted_at") null)
}
