Error =>
	<= Printable
	<= DebugPrintable

	message = String

repr { self(Error) } String -> format "Error({})" self.message

repr_debug { self(Error) } String -> repr self

DivideByZeroError = Error <=>
	message = "impossible to divide by zero"
