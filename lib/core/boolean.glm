Boolean = enum {
	<= 'Equatable
	<= 'Printable
	<= 'DebugPrintable

	-- these probably need optimized codegen to avoid becoming boxed
	=> :True
	=> :False
}

true = Boolean.True
false = Boolean.False

eq :: false -> false -> true
eq :: false -> true -> false
eq :: true -> true -> true
eq :: true -> false -> false

repr :: true -> "true"
repr :: false -> "false"

when :: true -> when_true -> when_true
when :: false -> _ -> when_false -> when_false
